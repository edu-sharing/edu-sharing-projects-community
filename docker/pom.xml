<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.edu_sharing</groupId>
    <artifactId>edu_sharing-community-deploy</artifactId>
    <version>git</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>edu_sharing-community-deploy-docker</artifactId>
  <packaging>pom</packaging>

  <name>edu_sharing-community-deploy-docker</name>

  <properties>

    <docker.from.apache.exporter>docker.io/bitnami/apache-exporter:0.10.1</docker.from.apache.exporter>
    <!--suppress UnresolvedMavenProperty -->
    <docker.from.apache.server>docker.io/php:${php.version}-apache-bullseye</docker.from.apache.server>
    <docker.from.minideb>docker.io/bitnami/minideb:bullseye</docker.from.minideb>
    <docker.from.openjdk>docker.io/openjdk:8-jdk-bullseye</docker.from.openjdk>
    <docker.from.postgresql.exporter>quay.io/prometheuscommunity/postgres-exporter:v0.10.0
    </docker.from.postgresql.exporter>
    <!--suppress UnresolvedMavenProperty -->
    <docker.from.postgresql.server>docker.io/bitnami/postgresql:${postgresql.version}
    </docker.from.postgresql.server>
    <docker.from.redis.exporter>docker.io/bitnami/redis-exporter:1.32.0</docker.from.redis.exporter>
    <docker.from.redis.server>docker.io/bitnami/redis:6.2.6</docker.from.redis.server>
    <docker.from.rediscluster.server>docker.io/bitnami/redis-cluster:6.2.6</docker.from.rediscluster.server>
    <!--suppress UnresolvedMavenProperty -->
    <docker.from.tomcat>docker.io/tomcat:${tomcat.version}-jdk8-openjdk-bullseye</docker.from.tomcat>

    <helm.kube.version>&gt;= 1.18.0</helm.kube.version>
    <helm.version>3.7.2</helm.version>

    <phpredis.version>5.3.4</phpredis.version>
    <prometheus.jmx.version>0.14.0</prometheus.jmx.version>
    <redisson.version>3.16.5</redisson.version>

  </properties>

  <build>

    <pluginManagement>

      <plugins>

        <plugin>
          <groupId>io.kokuwa.maven</groupId>
          <artifactId>helm-maven-plugin</artifactId>
          <configuration>
            <!--suppress UnresolvedMavenProperty -->
            <helmVersion>${helm.version}</helmVersion>
          </configuration>
        </plugin>

      </plugins>

    </pluginManagement>

  </build>

  <modules>
    <module>build</module>
    <module>compose</module>
    <module>helm</module>
    <module>repository</module>
    <module>services</module>
  </modules>

</project>
